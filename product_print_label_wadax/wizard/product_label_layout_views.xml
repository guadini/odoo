<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_label_layout_form_picking" model="ir.ui.view">
        <field name="name">product.label.layout.form</field>
        <field name="model">product.label.layout</field>
        <field name="inherit_id" ref="stock.product_label_layout_form_picking"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="print_format"]' position="before">
                <field name="product_select_ids"
                    widget="many2many_tags"
                    options="{'no_create': True, 'no_edit': True}"
                    attrs="{'invisible': ['|', ('print_format', '!=', '2.5x5'), ('move_line_ids', '=', False)]}"/>
            </xpath>
            <xpath expr='//field[@name="print_format"]' position="after">
                <field name="is_multiple_label_in_paper" attrs="{'invisible': ['|', ('print_format', '!=', '2.5x5'), ('move_line_ids', '=', False)]}"/>
                <field name="move_line_ids" invisible="1">
                    <tree>
                        <field name="product_id"/>
                        <field name="location_dest_id"/>
                        <field name="qty_done"/>
                        <field name="state"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
