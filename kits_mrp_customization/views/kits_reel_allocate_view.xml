<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="kits_reel_allocate_form_view" model="ir.ui.view">
            <field name="name">kits.reel.allocate.form.view</field>
            <field name="model">kits.reel.allocate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id" readonly="1" force_save="1" />
                        </group>
                        <group>
                            <field name="total_needed" />
                            <field name="total_allocated" />
                        </group>
                        <notebook>
                            <page name="allocate_lines" string="Allocate Lines">
                                <group>
                                    <field name="allocate_line_ids" nolabel="1" context="{'default_product_id':product_id}"  >
                                        <tree editable="bottom" >
                                            <field name="product_id" invisible="1" attrs="{'readonly':[('id','!=',False)]}" />
                                            <field name="lot_id" required="1" domain="[('product_id','=',product_id)]" options="{'no_create':True}" attrs="{'readonly':[('id','!=',False)]}" />
                                            <field name="quant_id" invisible="1" options="{'no_create':True}" />
                                            <field name="mo_id" required="1" attrs="{'readonly':[('id','!=',False)]}" force_save="1" options="{'no_create':True}" />
                                            <field name="component_line_id" required="1" attrs="{'readonly':[('id','!=',False)]}" domain="[('raw_material_production_id','=',mo_id),('product_id.is_reel','=',True)]" readonly="1" force_save="1" options="{'no_create':True}" />
                                            <field name="qty_needed" readonly="1" force_save="1" />
                                            <field name="qty_allocated" readonly="1" force_save="1" sum="Total Allocated" />
                                            <field name="wh_quantity" readonly="1" force_save="1" />
                                        </tree>
                                    </field>
                                </group>

                                <group string="Alternate Products" >
                                    <field name="alternative_line_ids" nolabel="1" context="{'alternate_product':True}"  >
                                        <tree editable="bottom">
                                            <field name="product_id" required="1" domain="[('id','in',allowed_alternate_product_ids),('is_reel','=',True)]" attrs="{'readonly':[('id','!=',False)]}" />
                                            <field name="lot_id" required="1" domain="[('product_id','=',product_id)]" options="{'no_create':True}" />
                                            <field name="quant_id" invisible="1" options="{'no_create':True}" />
                                            <field name="mo_id" domain="[('id','=',False)]" required="1" options="{'no_create':True}" attrs="{'readonly':[('id','!=',False)]}" />
                                            <field name="component_line_id" readonly="1" force_save="1" domain="[('raw_material_production_id','=',mo_id),('id','!=',move_id)]" options="{'no_create':True}" />
                                            <field name="move_id" invisible="1" options="{'no_create':True}" />
                                            <field name="wh_quantity" readonly="1" force_save="1" />
                                            <field name="qty_needed" readonly="1" force_save="1" sum="Total Needed" />
                                            <field name="qty_allocated" readonly="1" force_save="1" sum="Total Allocated" />
                                            <field name="allowed_alternate_product_ids" invisible="1" />
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kits_reel_allocate_tree_view" model="ir.ui.view">
            <field name="name">kits.reel.allocate.tree.view</field>
            <field name="model">kits.reel.allocate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" />
                    <field name="allocate_line_ids" widget="many2many_tags"  />
                </tree>
            </field>
        </record>
    </data>

</odoo>
